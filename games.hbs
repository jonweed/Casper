{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}

  <div class="site-wrapper">

    <header class="site-header outer">

      <div class="inner">

        <nav class="site-nav">
          <div class="site-nav-left"></div><!-- .site-nav-left -->
          <div class="site-nav-right"></div><!-- .site-nav-right -->
        </nav><!-- .site-nav -->

      </div><!-- .inner -->

    </header><!-- .site-header.outer -->

    <main id="site-main" class="site-main outer">

      <div class="inner">

        <article class="post-full post tag-getting-started ">
          <header class="post-full-header">
              <section class="post-full-meta"></section><!-- .post-full-meta -->
              <h1 class="post-full-title"></h1><!-- .post-full-title -->
          </header><!-- .post-full-header -->

          <figure class="post-full-image"></figure><!-- .post-full-image -->

          <section class="post-full-content">
              <div class="post-content"></div><!-- .post-content -->
          </section><!-- .post-full-content -->

          <section class="subscribe-form"></section><!-- .subscribe-form -->

          <footer class="post-full-footer">
            <section class="author-card"></section><!-- .author-card -->
            <div class="post-full-footer-right"></div><!-- .post-full-footer-right -->
          </footer><!-- .post-full-footer -->

        </article><!-- .post-full.post -->

      </div><!-- .inner -->

    </main><!-- .read-next.outer -->

    <aside class="read-next outer">
      <div class="inner">
        <div class="read-next-feed"></div><!-- .read-next-feed -->
      </div><!-- .inner -->
    </aside><!-- .read-next.outer -->

    <div class="floating-header"></div><!-- .floating-header -->

    <footer class="site-footer outer">
      <div class="site-footer-content inner"></div><!-- .site-footer-content.inner -->
    </footer><!-- .site-footer.outer -->

  </div><!-- .site-wrapper -->

  <div id="subscribe" class="subscribe-overlay"></div><!-- #subscribe.subscribe-overlay -->
